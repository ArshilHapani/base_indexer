generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Token {
  id          Int    @id @default(autoincrement())
  address     String @unique
  name        String
  symbol      String
  decimals    Int
  totalSupply BigInt
  logo        String

  Pool Pool[]
}

model Pool {
  id                Int    @id @default(autoincrement())
  baseTokenId       Int
  baseToken         Token  @relation(fields: [baseTokenId], references: [id])
  quoteTokenAddress String
}
